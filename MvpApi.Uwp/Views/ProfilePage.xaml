<Page x:Class="MvpApi.Uwp.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="using:MvpApi.Uwp.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <viewModels:ProfilePageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid"
              Height="48"
              Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">
            <TextBlock Text="Profile Page"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>

        <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Ellipse x:Name="ProfileImageEllipse"
                     Stroke="{ThemeResource ApplicationForegroundThemeBrush}"
                     Margin="20"
                     Width="220"
                     Height="220">
                <Ellipse.Fill>
                    <ImageBrush x:Name="ProfileImageBrush"
                                ImageSource="{Binding ProfileImagePath}" />
                </Ellipse.Fill>
            </Ellipse>

            <Button Content="Change Photo"
                    Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                    Click="{x:Bind ViewModel.UpdateProfilePictureButton_OnClick}"
                    Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="5"
                    Grid.Column="0"/>

            <StackPanel Margin="20"
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Top">
                <TextBlock Text="{Binding Mvp.FullName}"
                           Style="{ThemeResource HeaderTextBlockStyle}"
                           TextWrapping="Wrap" />
                <TextBlock Text="{Binding Mvp.Headline}"
                           Style="{StaticResource TitleTextBlockStyle}" />
            </StackPanel>

            <StackPanel Margin="20"
                        Grid.Row="0"
                        VerticalAlignment="Bottom"
                        Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="First MVP award in:"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Margin="0,0,10,0" />
                    <TextBlock Text="{Binding Mvp.FirstAwardYear}"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Years as MVP:"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               Margin="0,0,10,0" />
                    <TextBlock Text="{Binding Mvp.YearsAsMvp}"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="2">
            <Grid>
                <TextBlock Text="{Binding Mvp.Biography}"
                           Visibility="{Binding IsInEditMode, Converter={StaticResource InvertedBoolToVisibilityConverter}}"
                           TextWrapping="Wrap"
                           Margin="20,20,20,0" />
                <TextBox Text="{Binding Mvp.Biography, Mode=TwoWay}"
                         Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                         TextWrapping="Wrap"
                         Margin="20,20,20,0" />
            </Grid>
        </ScrollViewer>

        <CommandBar Grid.Row="3">
            <AppBarButton x:Name="SaveButton"
                          Label="save"
                          Icon="Save"
                          Click="{x:Bind ViewModel.SaveProfileButton_Click}"
                          Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />

            <AppBarToggleButton x:Name="EditProfileToggleButton"
                                IsChecked="{Binding IsInEditMode, Mode=TwoWay}"
                                Label="edit"
                                Icon="Edit" />
        </CommandBar>
    </Grid>
</Page>
