                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <primitives:RadShadow BlurRadius="50"
                                          Color="Black"
                                          ShadowOpacity="0.90">
                        <TextBlock FontFamily="Century Gothic"
                                   FontSize="32"
                                   FontWeight="{x:Bind Control.FontWeight}"
                                   Foreground="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"
                                   Text="Lancelot Software"
                                   TextWrapping="Wrap" />
                    </primitives:RadShadow>
                </Grid>
            </Grid>
        </Grid>

        <ScrollViewer x:Name="InfoViewer"
                      Grid.Column="0"
                      Grid.Row="1"
                      Margin="20,10,20,0">
            <StackPanel x:Name="AboutInfoPanel">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="MVP Companion v."
                               Style="{ThemeResource TitleTextBlockStyle}"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding AppVersion}"
                               Style="{ThemeResource TitleTextBlockStyle}"
                               FontWeight="SemiBold" />
                </StackPanel>

                <TextBlock Text="Copyright 2017-2020, Lancelot Software, LLC " />

                <Expander IsExpanded="True"
                          HorizontalAlignment="Left"
                          MinWidth="350"
                          Margin="0,10,0,0">
                    <Expander.Header>
                        <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
                            <TextBlock Text="Questions, problems or feature request?"
                                       Margin="10,0,0,0" />
                        </Grid>
                    </Expander.Header>
                    <Grid BorderBrush="{ThemeResource AppBarBackgroundThemeBrush}"
                          BorderThickness="4,0,4,4">
                        <StackPanel Padding="10">
                            <HyperlinkButton Content="Open a GitHub issue"
                                             NavigateUri="https://github.com/LanceMcCarthy/MvpApi/issues" />
                            <HyperlinkButton Content="Open Feedback Hub"
                                             Visibility="{Binding FeedbackHubButtonVisibility}"
                                             Click="{x:Bind ViewModel.FeedbackButton_Click}" />
                            <HyperlinkButton Content="Send an Email"
                                             Click="{x:Bind ViewModel.EmailButton_Click}" />
                        </StackPanel>
                    </Grid>
                </Expander>

                <Expander IsExpanded="False"
                          HorizontalAlignment="Left"
                          MinWidth="350"
                          Margin="0,15,0,0">
                    <Expander.Header>
                        <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
                            <TextBlock Text="Important information about privacy!"
                                       Margin="10,0,0,0" />
                        </Grid>
                    </Expander.Header>

                    <Grid BorderBrush="{ThemeResource AppBarBackgroundThemeBrush}"
                          BorderThickness="4,0,4,4">
                        <StackPanel Padding="10">
                            <HyperlinkButton Content="Open source on GitHub"
                                             NavigateUri="https://lancemccarthy.github.io/MvpApi/" />
                            <HyperlinkButton Content="Privacy Policy"
                                             NavigateUri="http://w8privacy.azurewebsites.net/privacy?dev=Lancelot%20Software&amp;app=MVP%20Companion&amp;mail=bGFuY2Vsb3Quc29mdHdhcmVAb3V0bG9vay5jb20=&amp;lng=En" />

                            <TextBlock Text="When you signed into this application, you needed to accept the following permissions:"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0" />
                            <Image Source="https://user-images.githubusercontent.com/3520532/37787423-411a595e-2dd5-11e8-9e42-36d8b27255bc.png"
                                   HorizontalAlignment="Left"
                                   Margin="10"
                                   Width="200" />

                            <TextBlock TextWrapping="Wrap">
                                    <Run Text="We want it make it clear this app" />
                                    <Run Text="does not"
                                         FontWeight="SemiBold" />
                                    <Run Text="access your contacts or friends list." />
                                    <LineBreak />
                                    <LineBreak />
                                    <Run Text="You can see the full source code and our privacy policy using the links above." />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <CommandBar Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Grid.Column="0">
            <AppBarButton x:Name="SettingsButton"
                          Label="diagnostics"
                          Icon="Setting">
                <AppBarButton.Flyout>
                    <Flyout>
                        <StackPanel x:Name="SettingsPanel"
                                    Background="{ThemeResource AppBarBackgroundThemeBrush}"
                                    Padding="10">

                            <TextBlock Text="Diagnostic Settings"
                                       Style="{ThemeResource TitleTextBlockStyle}" />

                            <telerikInput:RadNumericBox Header="Days to Keep Error Logs"
                                                        Value="{x:Bind ViewModel.DaysToKeepErrorLogs, Mode=TwoWay, Converter={StaticResource IntToDoubleConverter}}"
                                                        Minimum="2"
                                                        Maximum="10"
                                                        Margin="10" />
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>
    </Grid>
</UserControl>
