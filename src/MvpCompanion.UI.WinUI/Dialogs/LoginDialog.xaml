<ContentDialog x:Class="MvpCompanion.UI.WinUI.Dialogs.LoginDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:MvpCompanion.UI.WinUI.Views"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:primitives="using:Telerik.UI.Xaml.Controls.Primitives"
               xmlns:indicator="using:Telerik.UI.Xaml.Controls.Primitives.BusyIndicator"
               mc:Ignorable="d">
    <Grid>
        <WebView2 x:Name="AuthWebView"
                  NavigationStarting="AuthWebView_NavigationStarting"
                  NavigationCompleted="AuthWebView_NavigationCompleted"
                  Width="400"
                  Height="600" />

        <primitives:RadBusyIndicator x:Name="BusyIndicator"
                                     IsActive="False"
                                     Visibility="Collapsed"
                                     Content="Loading..."
                                     Style="{StaticResource PageBusyIndicatorStyle}"/>
    </Grid>
</ContentDialog>
