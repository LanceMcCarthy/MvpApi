<Page x:Class="MvpApi.Uwp.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModels="using:MvpApi.Uwp.ViewModels"
      xmlns:primitives="using:Telerik.UI.Xaml.Controls.Primitives"
      xmlns:controls="using:Telerik.UI.Xaml.Controls"
      xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
      mc:Ignorable="d">

    <Page.DataContext>
        <viewModels:ProfileViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="240" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid"
              Background="{ThemeResource SystemControlHighlightAltListAccentLowBrush}">
            <TextBlock Text="Profile"
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>

        <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Ellipse x:Name="ProfileImageEllipse"
                     Stroke="{ThemeResource ApplicationForegroundThemeBrush}"
                     Margin="20"
                     Width="170"
                     Height="170">
                <animations:Implicit.ShowAnimations>
                    <animations:ScaleAnimation From="0.6"
                                               To="1"
                                               Duration="0:0:1" />
                    <animations:OpacityAnimation From="0"
                                                 To="1"
                                                 Duration="0:0:1" />
                </animations:Implicit.ShowAnimations>
                <animations:Implicit.HideAnimations>
                    <animations:ScaleAnimation From="1"
                                               To="0.8"
                                               Duration="0:0:0.6" />
                    <animations:OpacityAnimation From="1"
                                                 To="0"
                                                 Duration="0:0:0.6" />
                </animations:Implicit.HideAnimations>
                <Ellipse.Fill>
                    <ImageBrush x:Name="ProfileImageBrush"
                                ImageSource="{Binding ProfileImagePath}" />
                </Ellipse.Fill>
            </Ellipse>

            <Grid x:Name="DetailsGrid"
                  Grid.Column="1">
                <StackPanel Margin="20,27,20,35"
                            Grid.Row="0"
                            VerticalAlignment="Top">
                    <animations:Implicit.ShowAnimations>
                        <animations:TranslationAnimation Delay="0:0:0.3"
                                                         From="40,0,0"
                                                         To="0,0,0"
                                                         Duration="0:0:0.8" />
                        <animations:OpacityAnimation Delay="0:0:0.2"
                                                     From="0"
                                                     To="1"
                                                     Duration="0:0:1" />
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:TranslationAnimation From="0,0,0"
                                                         To="0,40,0"
                                                         Duration="0:0:0.6" />
                        <animations:OpacityAnimation From="1"
                                                     To="0"
                                                     Duration="0:0:0.6" />
                    </animations:Implicit.HideAnimations>
                    <TextBlock Text="{Binding Mvp.FullName}"
                               Style="{ThemeResource HeaderTextBlockStyle}"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding Mvp.Headline}"
                               Style="{StaticResource SubtitleTextBlockStyle}" />
                </StackPanel>

                <StackPanel Margin="20,0,20,35"
                            Grid.Row="0"
                            VerticalAlignment="Bottom">
                    <animations:Implicit.ShowAnimations>
                        <animations:TranslationAnimation Delay="0:0:0.3"
                                                         From="20,0,0"
                                                         To="0,0,0"
                                                         Duration="0:0:0.8" />
                        <animations:OpacityAnimation Delay="0:0:0.2"
                                                     From="0"
                                                     To="1"
                                                     Duration="0:0:0.8" />
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:TranslationAnimation From="0,0,0"
                                                         To="0,40,0"
                                                         Duration="0:0:0.6" />
                        <animations:OpacityAnimation From="1"
                                                     To="0"
                                                     Duration="0:0:0.6" />
                    </animations:Implicit.HideAnimations>
                    <TextBlock Text="{Binding Mvp.FirstAwardYear, Converter={StaticResource StringFormatConverter}, ConverterParameter='First Award Year: {0}'}"
                               Style="{ThemeResource SubtitleTextBlockStyle}"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding Mvp.YearsAsMvp, Converter={StaticResource StringFormatConverter}, ConverterParameter='Years as MVP: {0}'}"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="SubHeaderGrid"
                  BorderThickness="0,2,0,1"
                  BorderBrush="{ThemeResource SystemControlHighlightAltListAccentLowBrush}"
                  Grid.ColumnSpan="2"
                  Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Biography"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Padding="5"
                           Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />

                <TextBlock Text="Online Identities"
                           HorizontalAlignment="Center"
                           Padding="5"
                           Foreground="{ThemeResource SystemControlHighlightAltAccentBrush}"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           Grid.Column="1" />
            </Grid>

            <ScrollViewer Grid.Row="1"
                          Grid.Column="0">
                <TextBlock Text="{Binding Mvp.Biography}"
                           TextWrapping="Wrap"
                           Margin="10,10,10,0">
                    <animations:Implicit.ShowAnimations>
                        <animations:ScaleAnimation From="0.6"
                                                   To="1"
                                                   Duration="0:0:1" />
                        <animations:OpacityAnimation From="0"
                                                     To="1"
                                                     Duration="0:0:1" />
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:ScaleAnimation From="1"
                                                   To="0.8"
                                                   Duration="0:0:0.6" />
                        <animations:OpacityAnimation From="1"
                                                     To="0"
                                                     Duration="0:0:0.6" />
                    </animations:Implicit.HideAnimations>
                </TextBlock>
            </ScrollViewer>

            <ListView x:Name="OnlineIdentitiesListView"
                      ItemsSource="{Binding OnlineIdentities}"
                      SelectionChanged="{x:Bind ViewModel.OnlineIdentitiesListView_OnSelectionChanged}"
                      SelectionMode="{Binding ListViewSelectionMode}"
                      Grid.Row="1"
                      Grid.Column="1">
                <animations:Implicit.ShowAnimations>
                    <animations:ScaleAnimation Delay="0:0:0.3"
                                               From="0.8"
                                               To="1"
                                               Duration="0:0:1.2" />
                    <animations:TranslationAnimation Delay="0:0:0.3"
                                                     From="0,80,0"
                                                     To="0,0,0"
                                                     Duration="0:0:1.2" />
                    <animations:OpacityAnimation Delay="0:0:0.3"
                                                 From="0"
                                                 To="1"
                                                 Duration="0:0:1.2" />
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:ScaleAnimation From="1"
                                               To="0.8"
                                               Duration="0:0:0.6" />
                    <animations:TranslationAnimation From="0,0,0"
                                                     To="0,80,0"
                                                     Duration="0:0:0.6" />
                    <animations:OpacityAnimation From="1"
                                                 To="0"
                                                 Duration="0:0:0.6" />
                </animations:Implicit.HideAnimations>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalAlignment"
                                Value="Stretch" />
                        <Setter Property="HorizontalAlignment"
                                Value="Stretch" />
                        <Setter Property="Padding"
                                Value="10" />
                        <Setter Property="Margin"
                                Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding SocialNetwork.IconUrl, Converter={StaticResource MvcContentUrlConverter}}"
                                       Width="20"
                                       Height="20"
                                       Margin="0,0,10,0" />
                                <TextBlock Text="{Binding SocialNetwork.Name}"
                                           Style="{ThemeResource SubtitleTextBlockStyle}" />
                            </StackPanel>

                            <HyperlinkButton Content="{Binding Url}"
                                             NavigateUri="{Binding Url, Converter={StaticResource StringToUriConverter}}" />

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Identity visible to:"
                                           Margin="0,0,5,0"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding OnlineIdentityVisibility.Description}"
                                           Foreground="{Binding OnlineIdentityVisibility, Converter={StaticResource PrivacyLevelToBrushConverter}}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

